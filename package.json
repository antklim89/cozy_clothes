  ],
  "scripts": {
    "dev": "bunx run-p dev:**",
    "dev:next": "next dev -H 0.0.0.0",
    "dev:typecheck": "bun typecheck -w",
    "build": "run-s build:**",
    "build:lint": "bun lint",
    "build:next": "bun next build --webpack",
    "start": "bunx next start",
    "typecheck": "tsc --noEmit --preserveWatchOutput",
    "typegen": "payload generate:types",
    "seed": "bun payload run seed/seed.ts",
    "lint": "bunx biome check",
    "docker:dev": "docker compose -f compose.yml -f compose.dev.yml up --build --watch",
    "docker:up": "docker compose up",
    "docker:build": "docker compose build",
    "docker:start": "docker compose start",
    "docker:stop": "docker compose stop"
  },
